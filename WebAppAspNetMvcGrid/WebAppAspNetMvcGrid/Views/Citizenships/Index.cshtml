@using WebAppAspNetMvcGrid.Models
@using Common.Models
@model IQueryable<Citizenship>

<h3>Гражданства</h3>
@{ string controllerName = "Citizenships"; }
@if (User.IsInRole("Administrator"))
{
    <button class="btn btn-success text-white" data-bs-toggle="modal" data-bs-target="#modal-@controllerName" onclick="GetCreate('@controllerName','create')">Добавить запись</button>

    <a href="/@controllerName/GetXlsx" class="btn btn-outline-light bg-success" title="Скачать таблицу в Excel">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-spreadsheet" viewBox="0 0 16 16">
            <path d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V9H3V2a1 1 0 0 1 1-1h5.5v2zM3 12v-2h2v2H3zm0 1h2v2H4a1 1 0 0 1-1-1v-1zm3 2v-2h3v2H6zm4 0v-2h3v1a1 1 0 0 1-1 1h-2zm3-3h-3v-2h3v2zm-7 0v-2h3v2H6z" />
        </svg>
    </a>
}

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Name).Titled("Страна");

        if (User.IsInRole("Administrator"))
        {
            columns.Add(model => Html.Partial("GridCellAction", new GridCellActionViewModel() { Id = model.Id, ControllerName = controllerName })).Css("grid-cell-action").Titled("Действия");
        }
    })
    .UsingFilterMode(GridFilterMode.Row)
    .Empty("Нет информации")
    .Filterable()
    .Sortable()
    //.Pageable()
)


<div class="modal fade" id="modal-@controllerName" data-bs-backdrop="static" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="/@controllerName/Index" class="btn-close"></a>
            </div>
            <div class="modal-body" id="modal-body-@controllerName">
                @if (ViewBag.Create != null)
                {
                    @Scripts.Render("~/bundles/bootstrap")
                    @Html.Partial("Create", (Citizenship)ViewBag.Create)
                    <script>
                        new bootstrap.Modal(document.getElementById('modal-@controllerName')).show();
                    </script>
                }
                @if (ViewBag.Edit != null)
                {
                    @Scripts.Render("~/bundles/bootstrap")
                    @Html.Partial("Edit", (Citizenship)ViewBag.Edit)
                    <script>
                        new bootstrap.Modal(document.getElementById('modal-@controllerName')).show();
                    </script>
                }
            </div>
        </div>
    </div>
</div>
